<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <include layout="@layout/toolbar1"
        android:id="@+id/toolbar"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/add_people"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/add_photo"
            android:scaleType="center"
            android:layout_centerInParent="true"
            android:background="#f6f3e3"
            />
        <at.markushi.ui.CircleButton
            android:layout_alignRight="@id/add_people"
            android:layout_below="@id/add_people"
            android:layout_marginLeft="10dp"
            android:id="@+id/circlebutton1"
            android:layout_width="65dip"
            android:layout_height="65dip"
            app:cb_color="@color/select_color1"
            app:cb_pressedRingWidth="8dip" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                >
                <EditText
                    android:id="@+id/add_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="姓名"
                    />
                <EditText
                    android:id="@+id/add_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="电话"/>
            </LinearLayout>
            <Button
                android:id="@+id/add_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="电话本"
                android:background="@color/maincolor">

                </Button>

        </LinearLayout>



        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/add_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:background="@drawable/buttonstyle_login"/>

    </LinearLayout>

</LinearLayout>